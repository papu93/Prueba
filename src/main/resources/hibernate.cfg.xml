<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/sivge?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping resource="/Usuario.hbm.xml"/>
    <mapping resource="/Directivo.hbm.xml"/>
    <mapping resource="/Materia.hbm.xml"/>
    <mapping resource="/AlumnoMateria.hbm.xml"/>
    <mapping resource="/Alumno.hbm.xml"/>
    <mapping resource="/Asistencia.hbm.xml"/>
    <mapping resource="/Profesor.hbm.xml"/>
    <mapping resource="/Persona.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
